{deps, [
    {erlpool, "1.4.2"},
    {yamerl, "0.10.0"}
]}.

{erl_opts, [
    warnings_as_errors,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warn_unused_function,
    warn_shadow_vars,
    warn_export_vars,
    warn_export_all,
    warn_exported_vars,
    warn_deprecated_function,
    strict_validation
]}.

{project_plugins, [rebar3_hex]}.
{cover_enabled, false}.

{profiles, [
    {bench, [
        {src_dirs, ["src", "benchmark"]}
    ]},
    {test, [
        {erl_opts, [debug_info, nowarn_export_all]}
    ]}
]}.
