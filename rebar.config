{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.9.2"}}},
    {erlpool, ".*", {git, "https://github.com/silviucpp/erlpool.git", {tag, "v1.4.1"}}},
    {yamerl, ".*", {git, "https://github.com/yakaz/yamerl.git", {tag, "v0.10.0"}}}
]}.

{erl_opts, [
    warnings_as_errors,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warn_unused_function,
    warn_shadow_vars,
    warn_export_vars,
    warn_export_all,
    warn_exported_vars,
    warn_deprecated_function,
    strict_validation,
    {parse_transform,lager_transform}
]}.

{project_plugins, [rebar3_hex]}.
{cover_enabled, false}.

{profiles, [
    {bench, [
        {src_dirs, ["src", "benchmark"]}
    ]},
    {test, [
        {erl_opts, [debug_info, nowarn_export_all]}
    ]}
]}.
